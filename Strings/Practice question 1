// Create a string firstName & lastName to store details of user & print all the characters using a loop.
#include <stdio.h>
void printName(char arr[]);

int main()
{
    char firstName[] = "THANMAY";
    char lastName[] = "SUMITH";
    
    printName(firstName);
    printName(lastName);
    

    return 0;
}

void printName(char arr[]){
    for(int i=0;arr[i] != '\0' ;i++){
        printf("%c",arr[i]);
    }
    printf("\n");
}
