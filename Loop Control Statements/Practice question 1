METHOD-1(for loop):-
// Print the numbers from 0 to 10.
#include <stdio.h>

int main()
{
    for(int i = 0; i <= 10; i++){
        printf("%d\n",i);
    }
    
    return 0;
}

METHOD-2(while loop):-
// Print the numbers from 0 to 10.
#include <stdio.h>

int main()
{
    int i = 0;
    while(i <= 10){
        printf("%d\n",i);
        i++;
    }
    
    return 0;
}

METHOD-3(do while loop):-
// Print the numbers from 0 to 10.
#include <stdio.h>

int main()
{
    int i = 0;
    do{
        printf("%d\n";i);
        i++;
    } while(i <= 10);
    
    return 0;
}
