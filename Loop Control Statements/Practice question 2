METHOD - 1(for loop):-
/* print the sum of first n natural numbers.
Also, print them in reverse.
*/
#include <stdio.h>

int main()
{
    int n;
    printf("enter the number: ");
    scanf("%d",&n);
    
    int sum = 0;
    for(int i = n; i >= 1; i--){
        sum += i;
        printf("%d\n",i);
    }
    printf("sum is %d",sum);
    
    return 0;
}

METHOD-2(while loop):-
/* print the sum of first n natural numbers.
Also, print them in reverse.
*/
#include <stdio.h>

int main()
{
    int n;
    printf("enter n: ");
    scanf("%d",&n);
    int sum = 0;
    int i = n;
    while(i >= 1){
        sum += i;
        printf("%d\n",i);
        i--;
    } 
    printf("sum is %d",sum);
    
    return 0;
}

METHOD-3(do while loop):-
/* print the sum of first n natural numbers.
Also, print them in reverse.
*/
#include <stdio.h>

int main()
{
    int n;
    printf("enter n: ");
    scanf("%d",&n);
    int sum = 0;
    int i = n;
    do{
        sum += i;
        printf("%d\n",i);
        i--;
    } while(i >= 1);
    printf("sum is %d",sum);
    
    return 0;
}
