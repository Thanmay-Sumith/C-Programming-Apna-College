METHOD-1(for loop):-
//Print factorial of a number n.
#include <stdio.h>

int main()
{
    int n;
    printf("enter n: ");
    scanf("%d",&n);
    
    int fact = 1;
    for(int i = 1; i <= n; i++){
        fact *= i;
    }
    printf("factorial is %d",fact);
    return 0;
}

METHOD-2(while loop):-
//Print factorial of a number n.
#include <stdio.h>

int main()
{
    int n;
    printf("enter n: ");
    scanf("%d",&n);
    int i = 1;
    int fact = 1;
    while(i <= n){
        fact *= i;
        i++;
    }
    printf("factorial is %d",fact);
    return 0;
}

METHOD-3(do while):-
//Print factorial of a number n.
#include <stdio.h>

int main()
{
    int n;
    printf("enter n: ");
    scanf("%d",&n);
    int i = 1;
    int fact = 1;
    do{
        fact *= i;
        i++;
    } while(i <= n);
    printf("factorial is %d",fact);
    return 0;
}
