//Write a function to calculate sum,product & average of 2 numbers.Print them in the main funcion.
#include <stdio.h>
void number(int a,int b,int *sum,int *prod,int *avg);
int main()
{
    int a = 8;
    int b = 6;
    int sum,prod,avg;
    number(a,b,&sum,&prod,&avg);
    
    printf("sum is %d, prod is %d, avg is %d",sum,prod,avg);
    return 0;
}

void number(int a,int b,int *sum,int *prod,int *avg){
    *sum = a+b;
    *prod = a*b;
    *avg = (a+b)/2;
}
